@model List<About>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<h3>Hakkimizda</h3>

<table class="table table-bordered table-hover">
	<tr>
		<th>#</th>
		<th>Resim</th>
		<th>Başlik</th>
		<th>Aciklama</th>
		<th>Islemler</th>
	</tr>

	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>  <img src="@item.ImageUrl" style="height:75px;width:75px" />  </td>
			<td>@item.Title</td>
			<td>@item.Description</td>
			<td>
				<a class="btn btn-outline-danger" asp-action="DeleteAbout" asp-route-id="@item.AboutId">Sil</a>
				<a class="btn btn-outline-info" asp-action="UpdateAbout" asp-route-id="@item.AboutId">Guncelle</a>
			</td>
		</tr>
	}
</table>

<a class="btn btn-outline-primary" asp-action="CreateAbout">Yeni Hakkimizda Alani Olustur</a>