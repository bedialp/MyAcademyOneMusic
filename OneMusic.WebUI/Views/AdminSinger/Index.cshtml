@model List<Singer>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<h3>Sarkicilar</h3>
	
<table class="table table-bordered table-hover">

	<tr>
		<th>#</th>
		<th>Resim</th>
		<th>Sarkici Adi</th>
		<th>İşlemler</th>
	</tr>

	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>  <img src="@item.ImageUrl" style="height:75px;width:75px" />  </td>
			<td>@item.Name</td>
			<td>
				<button class="btn btn-outline-danger" onclick="deleteSinger(@item.SingerId)">Sil</button>
				<a class="btn btn-outline-info" asp-action="UpdateSinger" asp-route-id="@item.SingerId">Güncelle</a>

			</td>
		</tr>
	}

</table>

<a class="btn btn-outline-primary" asp-action="CreateSinger">Yeni Sarkici Oluştur</a>

<script>

	function deleteSinger(id) {

		Swal.fire({
			title: "Silmek istediginize emin misiniz?",
			text: "Bu islemi geri alamazsiniz!",
			icon: "warning",
			showCancelButton: true,
			confirmButtonColor: "#3085d6",
			cancelButtonColor: "#d33",
			confirmButtonText: "Evet, Sil!",
			cancelButtonText: "Iptal"
		}).then((result) => {
			if (result.isConfirmed) {
				window.location.href = "/AdminSinger/DeleteSinger/" + id;
			}
		});
	}

</script>